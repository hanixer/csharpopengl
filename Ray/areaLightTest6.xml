<xml>
  <scene>
    <object type="rectangle" name="c1" material="mtl1">
      <p1 x="1"/>
      <p2 y="1"/>
      <!-- <scale value="2"/> -->
      <!-- <rotate angle="90" y="1"/> -->
      <!-- <translate y="2"/>  -->
    </object>
    <object type="disk" name="di" material="mtl2">
      <rotate angle="190" y="1"/>
      <translate z="-2"/>
    </object>
    <object type="disk" name="di2" material="mtl2">
      <translate z="-2"/>
    </object>
    <object type="sphere" name="sphere3" material="mtl2">
      <translate x="-4"/>
    </object>
    <object type="sphere" name="sphere4" material="mtl2">
      <translate x="4"/>
    </object>
    <object type="sphere" name="5" material="mtl2">
      <translate z="-4"/>
    </object>
    <object type="sphere" name="6" material="mtl2">
