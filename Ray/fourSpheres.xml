<xml>
  <scene>
    <object type="sphere" name="sphere1" material="blue">
      <translate x="-1" y="-0.75" z="0"/>
    </object>
    <object type="sphere" name="sphere2" material="green">
      <translate x="1" y="-0.75" z="0"/>
    </object>
    <object type="sphere" name="sphere3" material="red">
      <translate x="0" y="1" z="0"/>
    </object>
  </scene>
  <material type="blinn" name="blue">
    <diffuse r="0.2" g="0.1" b="0.7"/>
    <specular r="1.0" g="1.0" b="1.0" value="0.7"/>
    <glossiness value="20"/>
    <reflection value="1.0"/>
  </material>
  <material type="blinn" name="green">
    <diffuse r="0.2" g="0.6" b="0.1"/>
    <specular r="1.0" g="1.0" b="1.0" value="0.7"/>
    <glossiness value="20"/>
    <reflection value="1.0"/>
  </material>
  <material type="blinn" name="red">
    <diffuse r="0.3" g="0.1" b="0.1" value="2"/>
    <specular r="1.0" g="1.0" b="1.0" value="0.7"/>
    <glossiness value="20"/>
    <reflection value="1.0"/>
  </material>
    <light type="ambient" name="ambientLight">
      <intensity value="0.3"/>
    </light>
  <!-- <light type="point" name="pointLight">
    <intensity value="0.5"/>
    <position x="0" y="0" z="30"/>
  </light> -->
  <camera>
    <position x="0" y="0" z="10"/>
    <target x="0" y="0" z="0"/>
    <up x="0" y="1" z="0"/>
    <fov value="5"/>
    <width value="800"/>
    <height value="600"/>
  </camera>
</xml>