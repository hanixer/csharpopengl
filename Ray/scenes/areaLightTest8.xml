<xml>
  <scene>
    <environment r="1" g="1" b="1" value="0.0"/>
    <samples value="1"/>

    <object type="plane" name="lightSource" material="lightMat">
      <!-- <rotate angle="-90" x="1"/> -->
      <translate y="4"/>
    </object>
    <object type="sphere" name="lom" material="notwhite">
      <translate y="1.4"/>
    </object>
