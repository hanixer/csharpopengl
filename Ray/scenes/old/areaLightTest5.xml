<xml>
  <scene>
    <object type="disk" name="c1" material="mtl1">
      <scale value="3"/>
      <!-- <rotate angle="90" y="1"/> -->
      <translate y="3" z="5"/> 
    </object>
    <object type="rectangle" name="3" material="mtl2">
      <p0 x="-1" y="0" z="0"/>
      <p1 x="1" y="0" z="0"/>
      <p2 x="-1" y="1" z="0"/>
      <translate z="-3"/>
    </object>
