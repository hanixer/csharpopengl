    <diffuse r="0" g="0.5" b="0.41"/>
    <specular r="1.0" g="1.0" b="1.0" value="0.7"/>
    <reflection r="1" g="1"/>
  </material>
  <material type="blinn" name="mtl3">
    <diffuse r="0.71" g="0.4" b="0.16"/>
    <!-- <specular r="1.0" g="1.0" b="1.0" value="0.7"/> -->
  </material>
  <camera>
    <position x="5" y="5" z="5"/>
    <target x="0" y="0" z="-3"/>
    <up x="0" y="1" z="0"/>
    <fov value="90"/>
    <width value="400"/>
    <height value="400"/>
  </camera>
