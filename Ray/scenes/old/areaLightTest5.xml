      <p0 x="-1" y="0" z="0"/>
      <p1 x="1" y="0" z="0"/>
      <p2 x="-1" y="1" z="0"/>
      <rotate angle="90" y="1"/>
      <translate z="-3"/>
    </object>
    <object type="sphere" name="bottom" material="mtl2">
      <scale value="1000"/>
      <translate y="-1000"/>
    </object>
