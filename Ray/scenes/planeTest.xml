<xml>
  <scene>
    <object type="disk" name="lightSource" material="lightMat">
    </object>
    <object type="sphere" name="lom" material="notwhite">
      <translate z="-4"/>
    </object> 
    <object type="plane" name="pol" material="white">
    </object> 
    <object type="plane" name="pol2" material="white">
      <rotate angle="90" x="1"/>
      <translate z="-2"/>
    </object> 
  </scene>
  <light type="ambient" name="ambientLight">
    <intensity value="0.3"/>
  </light>
  <light type="direct" name="directionalLight">
    <intensity value="0.5"/>
    <direction x="0" y="-1" z="-1"/>
  </light>
  <material type="blinn" name="notwhite">
    <diffuse r="1" g="0.5" b="0.5"/>
  </material>
  <material type="blinn" name="white">
    <diffuse value="1"/>
  </material>
  <material type="emissive" name="lightMat">
    <color value="1"/>
  </material>
  <material type="blinn" name="mtl2">
    <diffuse r="0" g="0.5" b="0.41"/>
    <specular r="1.0" g="1.0" b="1.0" value="0.7"/>
    <reflection r="1" g="1"/>
  </material>
  <material type="blinn" name="mtl3">
    <diffuse r="0.71" g="0.4" b="0.16"/>
    <!-- <specular r="1.0" g="1.0" b="1.0" value="0.7"/> -->
  </material>
  <camera>
    <position x="10" y="10" z="10"/>
    <target x="0" y="0" z="0"/>
    <up x="0" y="0" z="1"/>
    <fov value="90"/>
    <width value="400"/>
    <height value="400"/>
  </camera>
</xml>