<xml>
  <integrator type="whitted" />

  <scene>
    <samples value="1" />

    <!-- Objects -->
    <object type="sphere" name="sphere2" material="wall">
    </object>

    <object type="plane" material="wall">
      <side value="10." />
      <rotate x="1" angle="-90" />
      <translate y="-2" />
    </object>

    <!-- Materials -->
    <material type="blinn" name="wall">
      <diffuse r="0.5" g="1" b="1"/>
      <specular value="0"/>
    </material>

    <!-- Lights -->
    <light2 type="area" name="areaLight1">
      <radiance value="20" />
      <rotate angle="90" x="1" />
      <translate y="50" />
      <object type="plane">
        <side value="10" />
      </object>
    </light2>
  </scene>

  <camera>
    <!-- <position x="15" y="0" z="15"/> -->
    <position x="20" y="20" z="20"/>
    <target x="0" y="0" z="0"/>
    <up x="0" y="1" z="0"/>
    <fov value="30"/>
    <width value="400"/>
    <height value="400"/>
  </camera>
</xml>